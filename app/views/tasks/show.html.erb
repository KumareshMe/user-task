<h2 class="text-center mt-3"><%= @task.title %></h1>

   <div class="container">
     <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center">
        <div class="card-header font-italic">
          by <%= @task.user.username %>
        </div>
        <div class="card-body">
          <div class="card-text"><%= simple_format(@task.description) %></div>
          <% if logged_in? && ( @task.user == current_user || current_user.admin? ) %>
          <%= link_to "Edit", edit_task_path(@task), class: "btn btn-outline-info" %>
          <%= link_to "Delete", task_path(@task), class: "btn btn-outline-danger", method: :delete, data: { confirm: "Are you sure you want to delete" } %>
          <% end %>
        </div>
        <div class="card-footer text-muted">
          <small>Created <%= time_ago_in_words(@task.created_at) %> ago
          edited <%= time_ago_in_words(@task.updated_at) %>ago </small>
        </div>
      </div>
    </div>
    </div>
  </div>

  